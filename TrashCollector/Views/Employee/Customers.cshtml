@model IEnumerable<TrashCollector.Models.Customer>

@{
    ViewBag.Title = "Customers";
}

<h2>All Customers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address.LineOne)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SuspendStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SuspendEnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActiveSuspension)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountOwed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address.LineOne)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SuspendStart)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SuspendEnd)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ActiveSuspension)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AmountOwed)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
