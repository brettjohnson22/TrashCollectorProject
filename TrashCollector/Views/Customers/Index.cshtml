@model TrashCollector.Models.Customer

@{
    ViewBag.Title = "Index";
}

<h2>Customer Portal</h2>

<div>
    <hr />
    <h4>Hello, @Html.DisplayFor(model => model.Name)</h4>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.PickUpDayID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PickUpDayID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AmountOwed)
        </dt>
        <dd>
            $@Html.DisplayFor(model => model.AmountOwed).00
        </dd>
        @if (Model.SuspensionSceduled)
        {
            <dt>
                @Html.DisplayNameFor(model => model.SuspendStart)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SuspendStart)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.SuspendEnd)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SuspendEnd)
            </dd>
        }
        else
        {
            <dt>
                No Suspension Scheduled.
            </dt>
            <dd></dd>
        }
        @Html.HiddenFor(model => model.Id)
    </dl>
</div>
<p>
    @Html.ActionLink("Edit Pickup Day", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Schedule Suspension", "Suspend", new { id = Model.Id }) |
    @Html.ActionLink("Schedule Extra Pickup", "Create", "PickUp")
</p>
