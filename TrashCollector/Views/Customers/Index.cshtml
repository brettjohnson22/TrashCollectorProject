@model TrashCollector.Models.Customer

@{
    ViewBag.Title = "Index";
}

<h2>Customer Portal</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PickupDay)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PickupDay)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AmountOwed)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AmountOwed)
        </dd>
        @if (Model.IsSuspended)
        {
            <dt>
                @Html.DisplayNameFor(model => model.SuspendStart)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SuspendStart)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.EndStart)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EndStart)
            </dd>
        }
        else
        {
            <dt>
                <p>No Suspension Scheduled.</p>
            </dt>
            <dd></dd>
        }
        @Html.HiddenFor(model => model.Id)
    </dl>
</div>
<p>
    @Html.ActionLink("Edit Pickup Day", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Schedule Suspension", "Suspend", new { id = Model.Id })
</p>
